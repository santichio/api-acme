{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "/*.yaml", 
        "outDir": "./dist/",
        "watchAssets": true
      }
    ]
  },
  "generateOptions": {
    "spec": false,
    "flat": true
  }
}
